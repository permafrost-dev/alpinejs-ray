{
    "name": "alpinejs-ray",
    "version": "2.1.1",
    "description": "Debug AlpineJS code with Ray to fix problems faster",
    "license": "MIT",
    "author": "Patrick Organ <patrick@permafrost.dev>",
    "homepage": "https://github.com/permafrost-dev/alpinejs-ray",
    "repository": {
        "type": "git",
        "url": "https://github.com/permafrost-dev/alpinejs-ray.git"
    },
    "bugs": {
        "url": "https://github.com/permafrost-dev/alpinejs-ray/issues"
    },
    "type": "module",
    "main": "./dist/lib/index.js",
    "module": "./dist/lib/index.js",
    "jsdelivr": "./dist/cdn/standalone.umd.js",
    "unpkg": "./dist/cdn/standalone.umd.js",
    "exports": {
        ".": {
            "default": "./dist/lib/index.js",
            "import": "./dist/lib/index.js",
            "require": "./dist/lib/index.cjs"
        }
    },
    "scripts": {
        "test": "vitest tests",
        "test:coverage": "vitest tests --coverage",
        "fmt": "prettier --config prettier.config.js --write 'src/**/*.{js,ts,json}' 'tests/**/*.{js,ts,json}' './*.js'",
        "lint": "eslint --ext ts,js src/",
        "lint:fix": "eslint --ext ts,js --fix src/",
        "lint:staged": "lint-staged",
        "fix": "npm run fmt && npm run lint:fix",
        "build:module": "vite build",
        "build:standalone": "vite build --config vite.config.standalone.js",
        "build:all": "concurrently npm:build:module npm:build:standalone",
        "preversion": "npm run test",
        "postversion": "npm run build:all",
        "prepare": "is-ci || husky"
    },
    "lint-staged": {
        "*.{js,ts,mjs,cjs,mts}": [
            "prettier --config prettier.config.js --write",
            "eslint --fix"
        ],
        "*.{json,css,scss,gql}": [
            "prettier --config prettier.config.js --write"
        ],
        "*.{yaml,yml}": [
            "prettier --config prettier.config.js --tab-width 2 --write"
        ]
    },
    "keywords": [
        "alpinejs",
        "ray",
        "spatie",
        "debug",
        "permafrost"
    ],
    "devDependencies": {
        "@types/alpinejs": "^3.13.10",
        "@types/node": "^22.9.0",
        "@typescript-eslint/eslint-plugin": "^8.13.0",
        "@typescript-eslint/parser": "^8.13.0",
        "@vitest/coverage-v8": "^2.1.4",
        "alpinejs": "^3.14.3",
        "concurrently": "^9.1.0",
        "eslint": "^9.14.0",
        "husky": "^9.1.6",
        "is-ci": "^3.0.1",
        "jsdom": "^25.0.1",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "typescript": "^5.6.3",
        "vite": "^5.4.10",
        "vitest": "^2.1.4"
    },
    "dependencies": {
        "minimatch": "^10.0.1",
        "node-ray": "^2.1.2"
    }
}
