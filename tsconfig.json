{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["esnext", "DOM", "ScriptHost"],
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "Bundler",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "~tests/*": ["tests/*"]
        },
        "typeRoots": ["node_modules/@types", "src"],
        "types": ["alpinejs"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowUmdGlobalAccess": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/globals.d.ts", "src/*.ts", "src/**/*.ts", "src/**/*.d.ts", "tests/AlpineRay.test.ts"]
}
